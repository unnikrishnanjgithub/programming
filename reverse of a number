package reverse;
import java.util.*;
public class Rev1 
{
	void display(int n)
	{
		int rem=0;
		int rev=0;
		while(n!=0)
		{
			rem=n%10;
			rev=rev*10+rem;
			n=n/10;
			
		}
		System.out.println("the reverse of a number is"+rev);
	}
	
   public static void main(String[] args) 
	{
	   Rev1 s1=new Rev1();
	 Scanner s=new Scanner(System.in);
	 System.out.println("enter the number");
	 int a=s.nextInt();
	 s1.display(a);
	 }
}
